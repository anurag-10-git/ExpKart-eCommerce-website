<%- include('includes/meta-tags.ejs') %>
 <link rel="stylesheet" href="/form.css">
</head>
<body>
    <%- include('includes/header.ejs') %>
    <main class="form-container login-form__container">
        <% if(errorMessage){ %>
        <div class="infoMessage errorMessage"><%= errorMessage %></div>
        <% } %>
        <form class="add-pro-form login-form common-design" action="/reset-password" method="POST">
            <div class="input-container">
                <label for="email">Email:</label>
                <input type="email" name="email" id="email">
            </div>
            <button class="btn" type="submit">Reset Password</button>
            <input type="hidden" value="<%= csrfToken %>" name="_csrf">
            <p>new user? <a href="/signup">sign up</a></p>
        </form>
    </main> 
</body>
</html>