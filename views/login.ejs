<%- include('includes/meta-tags.ejs') %>
 <link rel="stylesheet" href="/form.css">
</head>
<body>
    <%- include('includes/header.ejs') %>
    <main class="form-container login-form__container">
        <% if(errorMessage){ %>
        <div class="infoMessage errorMessage"><%= errorMessage %></div>
        <% } %>
        <form class="add-pro-form" action="/login" method="POST" novalidate>
            <div class="common-design">
            <div class="input-container">
                <label for="email">Email:</label>
                <input type="email" name="email" id="email" class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"  value="<%= oldInput.email %>">
            </div>
            <div class="input-container">
                <label for="password">Password:</label>
                <input type="password" name="password" id="password" class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>" value="<%= oldInput.password %>">
            </div>
            <button class="btn" type="submit">Login</button>
            <input type="hidden" value="<%= csrfToken %>" name="_csrf">
            <p>Forgot password?&nbsp;<a href="/reset-password">reset</a></p>
        </div>
        <a href="/signup">
            <div class="signup-btn">
                Create new account!
            </div>
        </a>
        </form>
       
    </main> 
</body>
</html>